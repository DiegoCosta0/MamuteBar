<!DOCTYPE html>
<html>
  <head>
    <title>Mamutebar</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success fixed-bottom"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert alert-danger fixed-bottom"><%= alert %></p>
    <% end %>

    <% if user_signed_in? %>
      <header>
        <%= render 'shared/navbar' %>
      </header>
    <% end %>

    <main class="container">
      <%= yield %>
    </main>
  </body>
</html>
